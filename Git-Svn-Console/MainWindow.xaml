<Window x:Class="Git_Svn_Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WpfAppControl="clr-namespace:WpfAppControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="589" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="consoleColumn" Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCommit" Content="dcommit" HorizontalAlignment="Left" Margin="31,50,0,0" VerticalAlignment="Top" Width="75" Click="btnCommit_Click" Grid.Column="1"/>
        <Label x:Name="labelBranch" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="96"/>
    </Grid>
</Window>
